{
    "version": "2.0.0",
    "command": "bash",
    "type": "shell",
    //"showOutput": "always",
    "options": {
        "cwd": "${workspaceRoot}"
    },
	"args": [
        "-c"
    ],
    "tasks": [
		{
			"label": "build",
			"suppressTaskName": true,
			"isBuildCommand": true,
			"args": [
				"make"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "test",
			"suppressTaskName": true,
			"isTestCommand": true,
			"args": [
				"make test"
			]
		},
		{
			"label": "deploy",
			"suppressTaskName": true,
			"args": [
				"make deploy"
			]
		},
		{
			"label": "help",
			"suppressTaskName": true,
			"args": [
				"make help"
			]
		}
	]
}